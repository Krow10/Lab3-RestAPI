<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200">

    <TextView
        android:id="@+id/w_live_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:maxLines="1"
        android:autoSizeTextType="uniform"
        android:text="City"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline2" />

    <TextView
        android:id="@+id/w_live_local_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/w_live_city"
        android:text="1:00"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <ImageView
        android:id="@+id/w_live_weather_icon"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/w_live_local_time"
        android:src="@drawable/ic_launcher_foreground"/>

    <TextView
        android:id="@+id/w_live_weather_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/w_live_weather_icon"
        android:layout_centerHorizontal="true"
        android:text="Details"/>

    <LinearLayout
        android:id="@+id/w_live_temp_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/w_live_weather_icon"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/w_live_current_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"/>

        <TextView
            android:id="@+id/w_live_feels_temperature"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:autoSizeTextType="uniform"
            android:maxEms="4"
            android:text="Feels like 12.00Â°C"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/w_live_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/w_live_temp_layout"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/w_live_wind_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SE"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/w_live_wind_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12 km/h"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/w_live_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="50 %"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/w_live_sun_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/w_live_details_layout"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/w_live_sunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1:00"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/w_live_sunset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6:00"
            android:textAlignment="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/w_live_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Updated"/>

</RelativeLayout>